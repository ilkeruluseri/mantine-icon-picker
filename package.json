{
  "name": "mantine-icon-picker",
  "private": false,
  "version": "1.1.7",
  "description": "A popover style icon picker made with Mantine.",
  "author": {
    "name": "Ä°lker Uluseri",
    "email": "ilkeruluseri@hotmail.com",
    "url": "https://github.com/ilkeruluseri"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./style.css": "./dist/index.css"
  },
  "style.css": "./dist/style.css",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "test": "vitest run",
    "test:watch": "vitest",
    "build:storybook": "storybook build",
    "build": "rm -rf dist && tsc && vite build",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint . --report-unused-disable-directives --max-warnings 0 --no-warn-ignored --fix",
    "lint:styles": "stylelint src/**/*.scss",
    "prepare": "husky",
    "release": "npm run build && release-it"
  },
  "devDependencies": {
    "@mantine/core": "^8.3.6",
    "@mantine/hooks": "^8.3.6",
    "@storybook/builder-vite": "^9.1.3",
    "@storybook/react": "^9.1.3",
    "@storybook/react-vite": "^9.1.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-window": "^2.0.0",
    "@vitejs/plugin-react-swc": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.1",
    "eslint-config-reactify": "^1.1.6",
    "eslint-plugin-storybook": "^9.1.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "release-it": "^19.0.4",
    "sass-embedded": "^1.90.0",
    "storybook": "^9.1.3",
    "stylelint": "^16.23.1",
    "stylelint-config-hudochenkov": "^12.0.0",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "tabler-dynamic-icon": "^1.2.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@mantine/core": "^8.2.5",
    "@mantine/hooks": "^8.2.5",
    "clsx": "^2.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-window": "^1.8.11",
    "tabler-dynamic-icon": "^1.2.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:scripts"
    ],
    "*.{css,scss}": [
      "npm run lint:styles"
    ]
  },
  "dependencies": {
    "@tabler/icons-webfont": "^3.35.0",
    "clsx": "^2.1.1",
    "react-window": "^1.8.11"
  }
}
